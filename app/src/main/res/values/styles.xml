<resources>
    <!-- Base application theme. -->
    <style name="Theme.HtmlaundryMobile" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
    </style>

    <!-- Deklarasi style AppTheme.NoActionBar -->
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item> <!-- Menonaktifkan action bar -->
        <item name="windowNoTitle">true</item> <!-- Menghilangkan judul aplikasi -->
    </style>
</resources>
